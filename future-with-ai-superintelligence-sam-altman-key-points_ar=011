  <script>
    window.addEventListener('load', function() {
      setTimeout(function() {
        document.getElementById('subscribeModal').style.display = 'flex';
      }, 1000);
    });
    document.getElementById('closeModal').addEventListener('click', function() {
      document.getElementById('subscribeModal').style.display = 'none';
    });
<!--share icon script-->
    document.getElementById('shareBtnAlt').addEventListener('click', async () => {
    const shareData = {
      title: document.querySelector('.article-title').innerText,
      text: 'Check out this article on Orcus4AI:',
      url: window.location.href
    };

    // Native Web Share API
    if (navigator.share) {
      try {
        await navigator.share(shareData);
      } catch (err) {
        console.error('Share was canceled or failed:', err);
      }
    } else {
      // Fallback: copy to clipboard
      try {
        await navigator.clipboard.writeText(shareData.url);
        const btn = document.getElementById('shareBtnAlt');
        const originalContent = btn.innerHTML;
        btn.textContent = 'Copied!';
        setTimeout(() => { btn.innerHTML = originalContent; }, 2000);
      } catch (err) {
        alert('Could not copy link automatically. Please copy manually: ' + shareData.url);
      }
    }
  });
    //sript back home
        (function() {
    // Only hijack “Back” if the referrer is empty or from another host
    const ref = document.referrer;
    const fromOutside = !ref || (new URL(ref)).hostname !== window.location.hostname;

    if (fromOutside) {
      // Push a new history entry so “Back” will pop this one first
      history.pushState(null, '', window.location.href);

      window.addEventListener('popstate', function(event) {
        // Redirect to homepage instead of going back to external referrer
        window.location.replace('index.html');
      });
    }
  })();

</script>

